#!/bin/bash

GIT_HOME=${GIT_HOME:-.}

function _repos()
{
  for d in $(find ${GIT_HOME} -maxdepth 1 -type d -not -name .)
  do
    [ -d $d/.git ] && basename $d
  done
}

function _branch()
{
  for r in $(_repos)
  do
    echo $r
    inside ${GIT_HOME}/$r git branch --color=always | sed 's/^/  /'
  done
}

function _status()
{
  local all_fine=1
  for r in $(_repos)
  do
    if !  inside ${GIT_HOME}/$r '[ $(git status -s | wc -l) -eq 0 ]' > /dev/null
    then
      echo $r is dirty
      all_fine=0
    fi
  done
  [ ${all_fine} -eq 1 ] && echo all repos are clean
}

case "$1" in
branch)
    _branch
    ;;
status)
    _status
    ;;
repos)
    _repos
    ;;
*)
    if _repos | grep -qwE "$(basename $1)"
    then
        d=${GIT_HOME}/$(basename $1)
        shift 1
        inside $d git "$*"
    else
        echo command not found: $1
        exit 1
    fi
    ;;
esac
